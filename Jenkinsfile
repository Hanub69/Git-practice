    agent any

    stages {
        stage('first') {
            steps {
                echo 'This is declarative pipeline first stage'
            }
        }
        stage('second') {
            steps {
                echo 'This is declarative pipeline 2nd stage'
            }
        }
        stage('third') {
            steps {
                echo 'This is Declarative pipeline 3rd stage'
            }
        }
        stage('Fourth') {
            steps {
                echo 'This is Declarative pipeline 4th stage'
            }
        }
    }
}
